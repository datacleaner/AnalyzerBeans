<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://eobjects.org/analyzerbeans/configuration/1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<configuration-metadata>
		<configuration-name>Configuration with all the datastores</configuration-name>
	</configuration-metadata>

	<datastore-catalog>
		<jdbc-datastore name="my_jdbc_connection">
			<url>jdbc:hsqldb:res:metamodel</url>
			<driver>org.hsqldb.jdbcDriver</driver>
			<username>SA</username>
			<password></password>
		</jdbc-datastore>

		<jdbc-datastore name="my_jdbc_datasource">
			<datasource-jndi-url>java:comp/env/jdbc/mydb</datasource-jndi-url>
		</jdbc-datastore>

		<excel-datastore name="my_xml">
			<filename>src/test/resources/example-xml-file.xml</filename>
		</excel-datastore>

		<csv-datastore name="my_csv">
			<filename>src/test/resources/employees.csv</filename>
			<quote-char>"</quote-char>
			<separator-char>,</separator-char>
		</csv-datastore>

		<excel-datastore name="my_excel_2003">
			<filename>src/test/resources/Spreadsheet2003.xls</filename>
		</excel-datastore>

		<access-datastore name="my_access">
			<filename>src/test/resources/developers.mdb</filename>
		</access-datastore>

		<dbase-datastore name="my_dbase">
			<filename>src/test/resources/report.dbf</filename>
		</dbase-datastore>

		<odb-datastore name="my_odb">
			<filename>src/test/resources/openoffice_db.odb</filename>
		</odb-datastore>

		<custom-datastore
			class-name="org.eobjects.analyzer.configuration.SampleCustomDatastore">
			<property name="Name" value="my_custom" />
			<property name="Xml file" value="src/test/resources/log4j.xml" />
		</custom-datastore>

		<composite-datastore name="my_composite">
			<datastore-name>my_jdbc_connection</datastore-name>
			<datastore-name>my_csv</datastore-name>
			<datastore-name>my_excel_2003</datastore-name>
			<datastore-name>my_access</datastore-name>
		</composite-datastore>
	</datastore-catalog>

	<multithreaded-taskrunner />

	<storage-provider>
		<in-memory max-rows-threshold="500" />
	</storage-provider>

</configuration>